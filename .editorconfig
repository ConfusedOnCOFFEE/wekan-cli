# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.el]
indent_style = space
max_line_length = 80


[Makefile]
indent_style = tab
tab_width = 4

[*.yml]
indent_style = space
indent_size = 2
